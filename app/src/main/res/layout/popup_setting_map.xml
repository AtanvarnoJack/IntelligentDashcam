<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_settings_map"
    android:background="@drawable/popupbackground50"
    android:scrollbars="vertical"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#becfd7d1">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reglages"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView8"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Map Type"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#####"
                android:id="@+id/tvw_setting_map_type"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:maxWidth="100dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Type!"
                android:id="@+id/btn_setting_map_type"
                android:background="@drawable/popupbackground50btn"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView9"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Map Visibility"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#####"
                android:id="@+id/tvw_setting_map_visibility"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:maxWidth="100dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Visibility!"
                android:id="@+id/btn_setting_map_visibility"
                android:background="@drawable/popupbackground50btn"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView10"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Interval"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/edt_setting_map_interval"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView6"
                android:layout_toLeftOf="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sec"
                android:id="@+id/textView6"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_setting_map_interval_set"
                android:layout_toStartOf="@+id/btn_setting_map_interval_set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old value:"
                android:id="@+id/textView7"
                android:layout_below="@+id/edt_setting_map_interval"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:id="@+id/tvw_setting_map_interval"
                android:layout_below="@+id/edt_setting_map_interval"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sec"
                android:id="@+id/textView11"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tvw_setting_map_interval"
                android:layout_toEndOf="@+id/tvw_setting_map_interval"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set!"
                android:id="@+id/btn_setting_map_interval_set"
                android:background="@drawable/popupbackground50btn"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView11"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fast Interval"
            android:id="@+id/textView20"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/edt_setting_map_fastinterval"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView13"
                android:layout_toLeftOf="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sec"
                android:id="@+id/textView13"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_setting_map_fastinterval_set"
                android:layout_toStartOf="@+id/btn_setting_map_fastinterval_set"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old value:"
                android:id="@+id/textView14"
                android:layout_below="@+id/edt_setting_map_fastinterval"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:id="@+id/tvw_setting_map_fastinterval"
                android:layout_below="@+id/edt_setting_map_fastinterval"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sec"
                android:id="@+id/textView18"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tvw_setting_map_fastinterval"
                android:layout_toEndOf="@+id/tvw_setting_map_fastinterval"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set!"
                android:id="@+id/btn_setting_map_fastinterval_set"
                android:background="@drawable/popupbackground50btn"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView12"
            android:background="#becfd7d1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Accuracy"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#####"
                android:id="@+id/tvw_setting_map_accuracy"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:maxWidth="100dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Type!"
                android:id="@+id/btn_setting_map_accuracy"
                android:background="@drawable/popupbackground50btn"
                android:layout_marginLeft="20dp"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView13"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Zoom"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/edt_setting_map_zoom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/btn_setting_map_zoom_set"
                android:layout_toStartOf="@+id/btn_setting_map_zoom_set" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old value:"
                android:id="@+id/textView12"
                android:layout_below="@+id/edt_setting_map_zoom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="####"
                android:id="@+id/tvw_setting_map_zoom"
                android:layout_below="@+id/edt_setting_map_zoom"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set!"
                android:id="@+id/btn_setting_map_zoom_set"
                android:background="@drawable/popupbackground50btn"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/imageView14"
            android:background="#becfd7d1"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transparency"
            android:id="@+id/rdb_setting_map_transparency"
            android:layout_gravity="center_horizontal"
            android:checked="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/imageView3"
                android:background="#becfd7d1"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save!"
                android:id="@+id/btn_setting_map_save"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/popupbackground50btn"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>